<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewTitle" android:textColor="#465494"
                android:textSize="24sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/textViewDescription" android:textColor="#000000"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>